{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@ui/*": ["./src/components/ui/*"],
      "@providers/*": ["./src/components/providers/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@pages/*": ["./src/pages/*"],
      "@styles/*": ["./src/styles/*"]
    },

    "types": ["node"]
  }
}
